# Example: NGINX Web Server Appliance
# Usage: ./appliance-wizard.sh examples/nginx.env

DOCKER_IMAGE="nginx:alpine"
APPLIANCE_NAME="nginx"
APP_NAME="NGINX Web Server"
PUBLISHER_NAME="OpenNebula Community"
PUBLISHER_EMAIL="community@opennebula.io"
APP_DESCRIPTION="NGINX is a high-performance HTTP server and reverse proxy"
APP_FEATURES="High performance web server,Reverse proxy,Load balancing,SSL/TLS termination"
DEFAULT_CONTAINER_NAME="nginx-server"
DEFAULT_PORTS="80:80,443:443"
DEFAULT_ENV_VARS=""
DEFAULT_VOLUMES="/data/nginx/html:/usr/share/nginx/html,/data/nginx/conf.d:/etc/nginx/conf.d"
APP_PORT="80"
WEB_INTERFACE="true"

# Base OS (x86_64 or ARM64)
BASE_OS="ubuntu2204min"
# For ARM64: BASE_OS="ubuntu2204.aarch64"

# VM Resources (optional)
VM_CPU="1"
VM_VCPU="2"
VM_MEMORY="1024"
VM_DISK_SIZE="8192"

# Auto-build after generating (optional)
# AUTO_BUILD="true"

