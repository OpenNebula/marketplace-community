# Example: Grafana Monitoring Dashboard
# Usage: ./appliance-wizard.sh examples/grafana.env

DOCKER_IMAGE="grafana/grafana:latest"
APPLIANCE_NAME="grafana"
APP_NAME="Grafana"
PUBLISHER_NAME="OpenNebula Community"
PUBLISHER_EMAIL="community@opennebula.io"
APP_DESCRIPTION="Grafana is the open source analytics and monitoring solution"
APP_FEATURES="Dashboard visualization,Multi-source metrics,Alerting,Plugin ecosystem"
DEFAULT_CONTAINER_NAME="grafana"
DEFAULT_PORTS="3000:3000"
DEFAULT_ENV_VARS="GF_SECURITY_ADMIN_PASSWORD=admin,GF_USERS_ALLOW_SIGN_UP=false"
DEFAULT_VOLUMES="/data/grafana:/var/lib/grafana"
APP_PORT="3000"
WEB_INTERFACE="true"

# Base OS
BASE_OS="ubuntu2204min"

# VM Resources
VM_CPU="1"
VM_VCPU="2"
VM_MEMORY="2048"
VM_DISK_SIZE="10240"

