# PostgreSQL Database Appliance Configuration
# Simple configuration file for generating a complete PostgreSQL appliance

# Required: Docker image to use
DOCKER_IMAGE="postgres:15"

# Required: Appliance name (single lowercase word, no dashes)
APPLIANCE_NAME="postgres"

# Required: Display name for the application
APP_NAME="PostgreSQL Database"

# Required: Publisher information
PUBLISHER_NAME="Your Name"
PUBLISHER_EMAIL="your.email@domain.com"

# Required: Application description
APP_DESCRIPTION="PostgreSQL is a powerful, open-source object-relational database system"

# Required: Application features (comma-separated)
APP_FEATURES="ACID compliance,Advanced SQL features,JSON support,Full-text search,Extensible architecture,Multi-version concurrency control"

# Optional: Container configuration
DEFAULT_CONTAINER_NAME="postgres-db"
DEFAULT_PORTS="5432:5432"
DEFAULT_ENV_VARS="POSTGRES_PASSWORD=opennebula,POSTGRES_DB=appdb,POSTGRES_USER=postgres"
DEFAULT_VOLUMES="/var/lib/postgresql/data:/var/lib/postgresql/data"

# Optional: Application settings
APP_PORT="5432"
WEB_INTERFACE="false"
